@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-shadow">
                <div class="card-header bg-success text-white text-center">
                    <h4> Registro de usuarios </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <div class="form-group mb-3">
                            <label for="username">Usuario</label>
                            <input type="text" class="form-control" id="username" name="username" required placeholder="Ingresa tu usuario" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required placeholder="Ingresa tu password" />
                        </div>
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger text-danger" role="alert">
                                @ViewBag.Error
                            </div>
                        }
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Registrarse</button>
                            <a asp-action="Login" class="btn btn-secondary">Iniciar sesión</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>